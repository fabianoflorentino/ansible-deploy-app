---
apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: {{ app_name }}
  namespace: {{ app_name }}
spec:
  maxReplicas: {{ max_replicas }}
  minReplicas: {{ min_replicas }}
  scaleTargetRef:
    apiVersion: extensions/v1beta1
    kind: Deployment
    name: {{ app_name }}
  targetCPUUtilizationPercentage: 80